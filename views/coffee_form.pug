//- PASSING IN TITLE, COFFEE, ORIGIN_LIST, ROAST_LIST

extends layout

block content

  h1= title

  form(action='' method='post')
    .mb-3
      label.form-label(for='name') Name:
      input.form-control(
        id='name'
        name='name'
        type='text'
        placeholder='Happy Mornings Blend, etc.'
        value=(coffee ? coffee.name : '')
      )
    .mb-3
      label.form-label(for='description') Description:
      input.form-control(
        id='description'
        name='description'
        type='text'
        placeholder='Bright, Sweet, Fruity, etc.'
        value=(coffee ? coffee.description : '')
      )
      .mb-3
        label.form-label(for='origin-country') Origin:
        select.form-select(
          id='origin-country'
          name='origin-country'
        )
          each origin in origin_list
            option(value=origin.country) #{origin.country}
      .mb-3
        label.form-label(for='roast-name') Roast:
        select.form-select(
          id='roast-name'
          name='roast-name'
        )
          each roast in roast_list
            option(value=roast.name) #{roast.name}
      .mb-3
        label.form-label(for='price') Price:
        input.form-control(
          id='price'
          name='price'
          type='number'
          value=(coffee ? coffee.price : 0)
          min='0'
          max='1000'
        )
      .mb-3
        label.form-label(for='quantity') Quantity:
        input.form-control(
          id='quantity'
          name='quantity'
          type='number'
          value=(coffee ? coffee.price : 0)
          min='0'
          max='100'
        )
    button.btn.btn-primary.mb-3(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg