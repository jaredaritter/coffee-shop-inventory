extends layout

block content

  h1= title

  form(action='' method='post')
    .form-group
      label(for='country') Country:
      input.form-control(id='country' type='text' name='country' placeholder='Columbia, Ethiopia, etc.' required)
      label(for='producer') Producer:
      input.form-control(id='producer' name='producer' type='text' placeholder='Doe family, Doe farms, etc.')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li != error.msg